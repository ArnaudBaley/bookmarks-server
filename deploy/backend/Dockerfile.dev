# Development Dockerfile
FROM node:20-alpine

# Set working directory
WORKDIR /app

# Install dependencies first (for better caching)
COPY package*.json ./
RUN npm install

# Copy source code
COPY . .

# Create data directory for SQLite database
RUN mkdir -p /app/data

# Expose port 3000
EXPOSE 3000

# Start development server
CMD ["npm", "run", "start:dev"]
